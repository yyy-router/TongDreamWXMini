/* pages/fuwu/LostFound/LostFound.wxss */
.top{
    display: flex;
    flex-direction: row;
    width: 90%;
    height: 50rpx;
    margin-top: 10rpx;
    margin-left: 20rpx;
    margin-bottom: 20rpx;
}
.search{
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    width: 90%;
    border-radius: 15rpx;
    background-color: lightgrey;
    align-items: center;
}
.search text{
    width: 8%;
    display: flex;
    justify-content: center;
    align-items: center;
}
.search input{
    width: 88%;
}
.search-tip{
    color: RGB(139,195,74);
}
.sort-list-scroll{
    width: 90%;
    margin-right:50rpx;
}
.sort-list{
    display: flex;
    flex-direction: row;
    white-space: nowrap;
}
.sort-list-item{
    margin: 10rpx 18rpx;
}
.sort-list-item.active{
    color: #0ca168;
    border-bottom: 2px solid #0ca168;
}
.arrow{
    width: 24rpx;
    height: 24rpx;
}
.arrow-down{
    position: absolute;
    top: 90rpx;
    right: 10rpx;
    width: 40rpx;
    height: 40rpx;
    text-align: right;
    transform:rotate(90deg);
}
.main-top{
    width: 100%;
    display: flex;
    flex-direction: row;
    height: 44rpx;
    font-size: 24rpx;
}
.sort2-list{
    display: flex;
    width: 80%;
    flex-direction: row;
    margin-top: 10rpx;
    margin-left: 30rpx;
    justify-content: flex-start;
    border-radius: 15rpx;
    align-items: center;
    text-align: center;
}
.sort2-list-item{
    height: 100%;
    padding:10rpx 10rpx;
    width: 100rpx;
}
.sort2-list-item.active{
    border-radius: 30rpx;
    background-color: RGB(5,206,151);
    color: white;
}
.my-fabu{
    white-space: nowrap;
    padding-top:10rpx;
    margin-right: 10rpx;
}
.container button{
    border-radius: 60rpx;
    padding-left: 20rpx;
    padding-right: 20rpx;
    position: absolute;
    bottom:80rpx;
}