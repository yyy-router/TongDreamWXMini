/* pages/fuwu/news/news.wxss */
.news-list {
    margin-bottom: 30rpx;
}

.scroll-list {
    width: 100%;
    height: 200rpx;
}

.list {
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: center;
    align-items: center;
}

.list-item {
    margin-top: 20rpx;
    display: flex;
    flex-direction: column;
    margin-left: 30rpx;
    color: #fff;
    font-weight: 700;
    justify-content: center;
    align-items: center;
    padding: 20rpx 10rpx;
    border-radius: 10rpx;
    opacity: 0.5;
    z-index: 1;
}

.list-item image {
    width: 80rpx;
    height: 80rpx;
}

.list-item.active {
    transform: scale(1.1, 1.1);
    opacity: 1;
}

.news-item {
    margin: 30rpx 20rpx;
    padding: 20rpx 20rpx;
    color: white;
    display: flex;
    flex-direction: column;
    border-bottom: 1px solid rgb(212, 167, 98);
    min-height: 130rpx;
    border-radius: 20rpx;
}

.news-title {
    font-size: 13pt;
    margin-bottom: 10rpx;
    font-weight: 600;
}

.news-content {
    font-size: 9pt;
    margin-bottom: 10rpx;
}

.news-time {
    font-size: 7pt;
    bottom: 0;
}

.nomore {
    margin-bottom: 30rpx;
    color: #888;
}